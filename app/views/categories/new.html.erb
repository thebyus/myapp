<%= render 'shared/content_title', title: 'New Category' %>

<div class='well'>
  <%= form_for @category do |f| %>
    <%= render 'shared/errors', obj: @category %>
    <div class='control-group'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <%= f.submit 'Create Category', class: 'btn btn-success' %>
  <% end %>
</div>
